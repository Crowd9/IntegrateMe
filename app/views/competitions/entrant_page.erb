<div class="container-sm border-box" ng-controller="EntrantController as ctrl" ng-init="ctrl.init(<%= @competition.id %>)">
  <h1>{{ctrl.competition.name}}</h1>

  <div ng-if="!ctrl.entry.completed">
    <p>Enter your details to win!</p>

    <form class="form-horizontal" name="entry" ng-submit="ctrl.submit()">
      <div class="alert alert-danger" ng-if="ctrl.errors">
        Sorry, there was a problem saving your entry:
        <ul>
          <li ng-repeat="(field, errors) in ctrl.errors">
            <strong>{{field}}:</strong>
            <span ng-repeat="error in errors">{{error}}</span>
          </li>
        </ul>
      </div>

      <div class="form-group" ng-if="ctrl.competition.requires_entry_name">
        <label for="name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
          <input id="name" class="form-control" name="name" placeholder="Name" ng-model="ctrl.entry.name">
        </div>
      </div>

      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          <input id="email" name="email" class="form-control" placeholder="Email" ng-model="ctrl.entry.email">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" class="btn btn-primary" value="Enter!">
        </div>
      </div>

    </form>
  </div>
  <div class="alert alert-success" ng-if="ctrl.entry.completed">
    <p>Thank you for entering our competition!</p>
  </div>
</div>