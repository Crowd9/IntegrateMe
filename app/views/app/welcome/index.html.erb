<h1>Competition App</h1>

<h2>Enter competitions below</h2>

<% if @competitions.any? %>
  <ul>
    <% @competitions.each do |competition| %>
      <li>
        <span><%= link_to competition.name, competition_entrant_page(competition) %></span>
        <span><%= link_to "(stats)", competition_path(competition) %></span>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Seed your data!</p>
<% end %>
