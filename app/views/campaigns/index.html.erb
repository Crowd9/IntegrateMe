<p id="notice"><%= notice %></p>

<h1>Listing Campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Subject Line</th>
      <th>Title</th>
      <th>From name</th>
      <th>Reply to</th>
      <th>Api key</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.subject_line %></td>
        <td><%= campaign.title %></td>
        <td><%= campaign.from_name %></td>
        <td><%= campaign.reply_to %></td>
        <td><%= campaign.api_key[0..5] %>...</td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

