<p id="notice"><%= notice %></p>

<p>
  <strong>Subject line:</strong>
  <%= @campaign.subject_line %>
</p>

<p>
  <strong>Title:</strong>
  <%= @campaign.title %>
</p>

<p>
  <strong>From name:</strong>
  <%= @campaign.from_name %>
</p>

<p>
  <strong>Reply to:</strong>
  <%= @campaign.reply_to %>
</p>

<ul>
  <strong>List of entries</strong>
  <% @campaign.entries.each do |entry| %>
    <li>
      <%= entry.email %>
      <%= link_to 'Edit', edit_campaign_entry_path(@campaign, entry) %>
    </li>

  <% end %>
</ul>

<%= link_to 'Join Name Email Competition', enterant_path(1, permalink: 'nameemail-comp', campaign_id: @campaign) %>
<%= link_to 'Join Email Competition', enterant_path(2, permalink: 'email-comp', campaign_id: @campaign) %> |

<%= link_to 'Back', campaigns_path %>
